---
import BurgerMenu from "../modules/BurgerMenu.vue";
import ButtonFunction from "../modules/ButtonFunction.vue";

import User from "phosphor-astro/User.astro";
import Basket from "phosphor-astro/Basket.astro";
import MagnifyingGlass from "phosphor-astro/MagnifyingGlass.astro";
import CaretDown from "phosphor-astro/CaretDown.astro";
---

<header>
  <nav class="flex">
    <a class="nav-logo nav-left" href="/"
      ><img class="nav-logo-img flex" src="/opdagDanmarkLogo.png" alt="" /></a
    >

    <!-- desktop nav -->
    <ul class="nav-centre nav-desktop">
      <li class="nav-centre-link">
        <a class="flex" href="/artikler"
          >Gå på opdagelse
          <CaretDown width="16" height="16" />
        </a>
      </li>
      <li class="nav-centre-link">
        <a class="flex" href="#"
          >Danmarks bedste
          <CaretDown width="16" height="16" />
        </a>
      </li>
      <li class="nav-centre-link">
        <a class="flex" href="/company"
          >Planlæg din tur
          <CaretDown width="16" height="16" />
        </a>
      </li>
      <li class="nav-centre-link">
        <a href="/shop">Shop</a>
      </li>
      <li class="nav-centre-link"><a href="#">Om os</a></li>
      <button class="nav-mobile-btn flex">
        <MagnifyingGlass width="16" height="16" />
      </button>
    </ul>

    <div class="nav-right nav-desktop flex">
      <ButtonFunction client:load />
      <a class="nav-mobile-btn flex" href="#">
        <User width="16" height="16" />
      </a>
      <a class="nav-mobile-btn flex" href="#">
        <Basket width="16" height="16" />
      </a>
    </div>

    <!-- mobile menu -->
    <BurgerMenu client:load />
  </nav>
</header>

<style>
  header {
    width: min(95vw, 1200px);
    padding: 0.75rem 0;
    position: fixed;
    top: 0;
    z-index: 9999;
  }

  nav {
    background: var(--primary-400-t3);
    backdrop-filter: blur(100px);
    position: relative;
    padding: 0.375rem 0.75rem;
    justify-content: space-between;
    align-items: center;
    border: 1px solid var(--primary-500-t2);
    border-radius: var(--round-pill);
  }

  .nav-logo {
    img {
      width: 160px;
      height: auto;
    }
  }

  .nav-desktop {
    display: none;
  }

  @media screen and (min-width: 1200px) {
    .nav-desktop {
      display: flex;
      padding: 0;
    }

    .nav-centre {
      list-style-type: none;
      gap: 0.5rem;
      align-items: center;

      .nav-centre-link {
        transition: all 150ms ease-in-out;

        &:hover {
          transform: scale(1.03);
        }
      }

      a {
        text-decoration: none;
        align-items: center;
        padding: 0.25rem 0.6rem;
        color: var(--primary-700);
        border-radius: var(--round-25);
        border: 1px solid hsla(0, 0%, 100%, 0);
        font-size: 0.875rem;
        font-weight: 500;
        &:hover {
          border: 1px solid var(--greyscale-100);
          background: var(--greyscale-100-t2);
          color: var(--accent-500);
          svg {
            color: var(--accent-500);
          }
        }
      }
    }

    .nav-right {
      align-items: center;
      gap: 0.5rem;
    }

    svg {
      color: var(--primary-600);
    }

    .nav-mobile-btn {
      cursor: pointer;
      transition: all 200ms ease-in-out;
      &:hover {
        transform: scale(1.1);
        border-color: var(--greyscale-100);
        background: var(--greyscale-100-t2);
        svg {
          color: var(--accent-500);
        }
      }
    }
  }
</style>
