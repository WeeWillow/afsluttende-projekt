---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";

import ButtonFunction from "../../components/modules/ButtonFunction.vue";
import Breadcrumb from "../../components/modules/Breadcrumb.astro";
import EventCard from "../../components/elements/CardEvents.astro";
import AttractionCard from "../../components/elements/CardAttraction.astro";
import RecommendedPlaces from "../../components/layout/RecommendedPlaces.astro";

import moterMille from "../assets/faarupImg/moterMille.webp";
import bedsteforaeldreDag from "../assets/faarupImg/bedsteforaeldreDag.webp";
import rekorddag from "../assets/faarupImg/rekorddag.jpg";
import hrSkaeg from "../assets/faarupImg/hrSkaeg.jpg";

const customFaarup = [
  {
    index: 0,
    text: "Fårup Sommerland",
  },
];

const events = [
  { image: moterMille, date: "31 Maj", title: "Motor mille" },
  { image: bedsteforaeldreDag, date: "10 Oktober", title: "Bedsteforældredag" },
  { image: rekorddag, date: "27 August", title: "Fårups store rekorddag" },
  { image: hrSkaeg, date: "23 August", title: "Hr. Skæg" },
];

const forlystelser = [
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/mineexpressen.webp`,
    title: "Mine-ekspressen",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/flagermusen.webp`,
    title: "Flagermusen",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/trestammer.webp`,
    title: "Træstammer",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/orkanen.webp`,
    title: "Orkanen",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/foenix.webp`,
    title: "Fønix",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/falken.webp`,
    title: "Falken",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/lynetGroen.webp`,
    title: "Lynet",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
  {
    image: `${import.meta.env.BASE_URL}faarupImg/forlystelser/saven.webp`,
    title: "Saven",
    text: "En rutjebanetur rundt i bratte sving mellom træer",
  },
];
---

<Layout title="Fårup Sommerland">
  <Breadcrumb customizeLinks={customFaarup} />

  <section class="map-section flex">
    <img
      class="map-section-image"
      src="/cases/opdagdanmark-v1/faarupImg/hero.webp"
      alt=""
    />
    <div class="map-section-overlay"></div>
    <div class="map-section-content">
      <h1>Fårup Sommerland</h1>
      <h2>De største oplevelser er dem vi har sammen</h2>
    </div>
    <div class="map-section-buttons flex">
      <ButtonFunction
        label="Besøg Hjemmesiden"
        iconType="external"
        variant="outline"
      />
      <ButtonFunction label="Køb billet" iconType="external" />
    </div>
  </section>

  <section class="faarup-intro">
    <h2>Sjov, fart og leg midt i skoven</h2>
    <p>
      Fårup Sommerland er ikke bare Nordjyllands største attraktion. Parken er
      også en af Danmarks mest besøgte attraktioner (iflg. VisitDenmarks
      opgørelser) og en endnu bedre grund til at besøge parken helt ude i
      skoven: Parken er kåret som Europas Bedste Forlystelsespark i både 2021 og
      2022!
    </p>
    <p>Hertil vandt Fønix i 2022 prisen som Europas Bedste Forlystelse.</p>
  </section>

  <section class="faarup-events-section">
    <h2>Kommende events</h2>
    <div class="faarup-events">
      {events.map((event) => <EventCard {...event} />)}
    </div>
  </section>

  <section class="faarup-attraction-section">
    <h2>Udvalgte forlystelser</h2>
    <div class="faarup-attractions">
      {forlystelser.map((forlystelse) => <AttractionCard {...forlystelse} />)}
    </div>
  </section>

  <section class="faarup-map-section">
    <h2>Interaktivt kort over fårup sommerland</h2>
    <p>
      Få overblikket over parkens forlystelser med vores interaktive oversigt
      (klik på billedet for at åbne)
    </p>
    <img src="/cases/opdagdanmark-v1/faarupImg/interaktivt-kort.jpeg" alt="" />
  </section>
  <RecommendedPlaces />
</Layout>

<style>
  .faarup-intro {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  section {
    display: flex;
    flex-direction: column;
  }

  p {
    color: var(--primary-700);
  }

  h2 {
    margin-bottom: 15px;
    font-weight: var(--text-500);
  }

  h2:not(.map-section-content h2) {
    color: var(--primary-700);
    font-size: 2rem;
  }

  .map-section-content h2 {
    font-family: "Athiti", sans-serif;
    font-size: var(--font-size-600);
    font-weight: 300;
    max-width: 300px;
  }

  p {
    margin-bottom: 10px;
    font-size: var(--font-size-500);
  }

  .map-section {
    position: relative;
    overflow: hidden;
    padding: 1.5rem 2.5rem;
    border: 1px solid var(--primary-500);
    justify-content: space-between;
    background: var(--primary-400);
    height: 18rem;
    flex-direction: column;
    border-radius: var(--round-general);

    color: var(--greyscale-100);

    h1 {
      font-size: 3rem;
    }
  }

  .map-section-image,
  .map-section-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .map-section-image {
    object-position: 20% 20%;
  }

  .map-section-overlay {
    /* backdrop-filter: blur(2px); */
    background: var(--utility-gradient-blue-right);
    z-index: 1;
  }

  .map-section-buttons {
    gap: 0.5rem;
  }

  .map-section-buttons,
  .map-section-content {
    z-index: 2;
  }

  .map-section-content {
    h2 {
      font-size: 1.2rem;
      padding: 0.25rem 0 0;
      width: 60ch;
      font-weight: 400;
      line-height: 100%;
    }
  }

  .faarup-map-section {
    img {
      width: 100%;
      border-radius: var(--round-general);
    }
  }

  /* ------MEDIA QUERIES------ */
  @media screen and (min-width: 700px) {
    .faarup-events,
    .faarup-attractions {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    h2 {
      font-size: var(--font-size-600);
    }

    .faarup-map-section {
      img {
        height: 400px;
        object-fit: cover;
        position: center;
      }
    }
  }
</style>
