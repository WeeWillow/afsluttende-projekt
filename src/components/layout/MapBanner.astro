---
import ActionButton from "../modules/ActionButton.vue";
import image from "../../assets/map-section.png";
---

<section class="map-section flex">
  <img class="map-section-image" src={image.src} alt="" />
  <div class="map-section-overlay"></div>
  <div class="map-section-content">
    <h2>Få overblik gennem oplevelseskortet</h2>
    <h3>
      OpdagDanmarks oplevelseskort samler alle de bedste områder, aktiviteter og
      begivenheder i ét sted. Find den online eller i vores app!
    </h3>
  </div>
  <div class="map-section-buttons flex">
    <ActionButton label="Åbn kortet" iconType="external" variant="outline" />
    <ActionButton />
  </div>
</section>

<style>
  .map-section {
    position: relative;
    overflow: hidden;
    padding: 1.5rem 2.5rem;
    border: 1px solid var(--primary-500);
    justify-content: space-between;
    background: var(--primary-400);
    height: 13rem;
    flex-direction: column;
    border-radius: var(--round-general);

    color: var(--greyscale-100);

    h2 {
      font-size: 2.5rem;
    }
  }

  .map-section-image,
  .map-section-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .map-section-overlay {
    backdrop-filter: blur(2px);
    background: var(--utility-gradient-blue-right);
    z-index: 1;
  }

  .map-section-buttons {
    gap: 0.5rem;
  }

  .map-section-buttons,
  .map-section-content {
    z-index: 2;
  }

  .map-section-content {
    h3 {
      font-size: 1.2rem;
      padding: 0.25rem 0 0;
      width: 60ch;
      font-weight: 400;
      line-height: 100%;
    }
  }

  @media screen and (max-width: 1199px) {
    .map-section {
      padding: 1rem;
      justify-content: space-between;
      height: 12rem;

      .map-section-content {
        h2 {
          font-size: 1.5rem;
          line-height: 1.5rem;
        }
        h3 {
          padding: .5rem 0 0;
          font-size: 1rem;
          width: 100%;
        }
      }
    }
    .map-section-buttons {
      justify-content: space-between;
    }

    .map-section-overlay {
      backdrop-filter: blur(3px);
      background: var(--utility-gradient-blue-right);
    }
  }
</style>
